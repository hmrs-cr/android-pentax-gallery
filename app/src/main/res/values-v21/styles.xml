<resources>


    <style name="AppThemeDark"  parent="Theme.AppCompat" >

    </style>

    <style name="AppThemeDark.GalleryScreen">
        <item name="android:statusBarColor">@color/translucent</item>
        <item name="android:navigationBarColor">@color/translucent</item>
        <item name="android:windowTranslucentStatus">true</item>

        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>

        <item name="android:actionBarStyle">@style/TranslucentDarkActionBar</item>
        <item name="actionBarStyle">@style/TranslucentDarkActionBar</item>
    </style>

    <style name="AppThemeDark.FullScreen">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>

        <item name="android:actionBarStyle">@style/TranslucentDarkActionBar</item>
        <item name="actionBarStyle">@style/TranslucentDarkActionBar</item>
    </style>

    <style name="AppThemeDark.CameraScreen" parent="Theme.AppCompat.NoActionBar">
    </style>

    <style name="AppThemeDark.PreferenceScreen"  parent="Theme.AppCompat"/>


    <style name="TranslucentDarkActionBar" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/translucent</item>
        <item name="background">@color/translucent</item>
    </style>

</resources>
